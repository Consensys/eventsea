{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [".env"],
  "pipeline": {
    "build": {
      "env": [
        "INFURA_IPFS_ENDPOINT",
        "INFURA_IPFS_GATEWAY",
        "NEXT_PUBLIC_EVENTS_FACTORY_CONTRACT_ADDRESS",
        "INFURA_API_KEY",
        "INFURA_API_SECRET",
        "NETWORK",
        "LINEA_TEST_RPC_ENDPOINT"
      ],
      "dependsOn": ["^build", "compile"],
      "outputs": ["dist/**", ".next/**"]
    },
    "dev": {
      "cache": false,
      "env": [
        "INFURA_IPFS_ENDPOINT",
        "INFURA_IPFS_GATEWAY",
        "NEXT_PUBLIC_EVENTS_FACTORY_CONTRACT_ADDRESS",
        "INFURA_API_KEY",
        "INFURA_API_SECRET"
      ]
    },
    "compile": {
      "cache": false
    },
    "deploy:test": { 
      "cache": false
    },
    "deploy:local": {
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "cache": false
    }
  }
}
