{
  "name": "blockchain",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "compile": "forge build && npx typechain --target ethers-v6 \"out/**/!(*.t|test).sol/!(*.abi).json\" --out-dir typechain-types",
    "deploy:test": "forge script script/EventsFactory.s.sol:Deploy --fork-url linea-testnet --broadcast",
    "deploy:local": "forge script script/EventsFactory.s.sol:Deploy --fork-url http://localhost:8545 --broadcast",
    "blockchain": "anvil"
  },
  "devDependencies": {
    "@typechain/ethers-v6": "^0.5.1",
    "typechain": "^8.3.2"
  }
}
